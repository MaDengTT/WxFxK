<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewDetailActivity">

    <com.xxm.mmd.component_news.HzJView
        android:layout_width="175dp"
        android:layout_height="186dp"
        android:background="#ccc"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:HzArcWidth="10dp"
        app:HzCircleColor="#33b5e5"
        app:HzText="Hello, HzJView"
        app:HzTextSize="24sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#F0eeee"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="visible"
                    android:src="@drawable/terrace"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_label_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotel Overview"
                            />

                        <TextView
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="12dp"
                            android:lineSpacingExtra="2dp"
                            android:textColor="#868686"
                            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/but_label_2"
                    app:layout_constraintTop_toBottomOf="@+id/cv_label_2"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_label_2"
                    app:layout_constraintRight_toRightOf="@+id/cv_label_2"
                    android:layout_marginRight="16dp"
                    android:textSize="13dp"
                    android:background="@drawable/news_detial_button_bg"
                    android:textColor="@color/white"
                    android:text="View our history"
                    android:layout_width="150dp"
                    android:layout_height="40dp" />

                <View
                    app:layout_constraintTop_toBottomOf="@+id/but_label_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Hotel Aminities"
                    android:textSize="14sp"
                    android:textColor="#293440"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="16dp"
                                android:src="@drawable/bed"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />


                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rooms &amp; Services"
                                android:textColor="#293440"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="16dp"
                                android:src="@drawable/dish"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />


                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Restaurants"
                                android:textColor="#293440"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="16dp"
                                android:src="@drawable/toast"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />


                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Banquets"
                                android:textColor="#293440"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"/>
                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="16dp"
                                android:src="@drawable/reception"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />


                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Other Services"
                                android:textColor="#293440"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>